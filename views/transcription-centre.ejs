<div>
    <h2 class="text-center">Transcription Centre</h2>
</div>

<div class="top-container">
    <ul>
        <% files.forEach(file => { %>
            <li>
                <span><%= file.name %></span>
                <button class="transcribeButton" data-file="<%= file.name %>">Transcribe</button>
                <button class="delete" data-file="<%= file.name %>">Delete</button>

            </li>
        <% }); %>
    </ul>
</div>

<script>
    document.querySelectorAll('.transcribeButton').forEach(button => {
        button.addEventListener('click', function () {
            // Get the file name from the button
            let fileName = this.getAttribute('data-file');
            // Execute the fromFile function
            fromFile(fileName);
        });
    });

